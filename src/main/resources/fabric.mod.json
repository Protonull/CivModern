{
	"schemaVersion": 1,
	"id": "civmodern",
	"name": "${mod_name}",
	"version": "${mod_version}",
	"description": "${mod_description}",
	"authors": "%FABRIC_AUTHORS_ARRAY%",
	"license": "${copyright_licence}",
	"contact": {
		"homepage": "${mod_home_url}",
		"sources": "${mod_source_url}",
		"issues": "${mod_issues_url}"
	},
	"icon": "assets/civmodern/icon.png",
	"environment": "client",
	"entrypoints": {
		"client": [
			"sh.okx.civmodern.mod.CivModernMod::bootstrap"
		],
		"modmenu": [
			"sh.okx.civmodern.mod.hooks.modmenu.ModMenuIntegration"
		]
	},
	"depends": {
		"minecraft": "${minecraft_version}",
		"fabricloader": ">=${fabric_loader_version}",
		"fabric": "*"
	},
	"suggests": {
		"modmenu": ">=${modmenu_version}"
	},
	"mixins": [
		"civmodern.mixins.json"
	]
}
